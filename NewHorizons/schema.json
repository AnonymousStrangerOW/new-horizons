        },
        "longitudeOfAscendingNode": {
          "type": "number",
          "default": 0
        },
        "eccentricity": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 0.99
        },
        "argumentOfPeriapsis": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 360
        },
        "trueAnomaly": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 360
        },
        "axialTilt": {
          "type": "number",
          "default": 0
